<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.threemusketeers.healthmaster.AboutUs">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/midnight_blue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wet_asphalt"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Team 'Three Musketeers'"
            android:textAllCaps="false"
            android:textColor="@color/clouds"
            android:textSize="20sp" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textteam"
            android:background="@color/midnight_blue"
            android:orientation="vertical"
            android:weightSum="3">

            <View
                android:layout_width="wrap_content"
                android:background="@drawable/separator"
                android:layout_height="1dp" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/midnight_blue"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    app:srcCompat="@drawable/aboutus_raad" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/midnight_blue"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="25dp"
                    android:weightSum="3">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="0dp"
                        android:text="Raiyad Raad"
                        android:textColor="@color/clouds"
                        android:textSize="21sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="North South University"
                        android:textColor="@color/clouds"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="raiyad.raad@gmail.com"
                        android:textColor="@color/concrete"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="@drawable/separator"
                android:layout_height="1dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/midnight_blue"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/aboutus_mehrab" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/midnight_blue"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="25dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="0dp"
                        android:text="Mehrab Zaman"
                        android:textColor="@color/clouds"
                        android:textSize="21sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="Islamic University of Technology"
                        android:textColor="@color/clouds"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="bluebonafide@gmail.com"
                        android:textColor="@color/concrete"
                        android:textSize="16sp" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="@drawable/separator"
                android:layout_height="1dp" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/midnight_blue"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="25dp"
                    app:srcCompat="@drawable/aboutus_tanhim" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/midnight_blue"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="25dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="0dp"
                        android:text="Tanhim Islam"
                        android:textColor="@color/clouds"
                        android:textSize="21sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="Brac University"
                        android:textColor="@color/clouds"
                        android:textSize="18sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="tanhimislam@gmail.com"
                        android:textColor="@color/concrete"
                        android:textSize="16sp"
                        android:id="@+id/textView23" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="@drawable/separator"
                android:layout_height="1dp" />


        </LinearLayout>


    </RelativeLayout>


</ScrollView>
